<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black"
    android:layout_marginBottom="8dp">

    <!-- Nom du passager -->
    <TextView
        android:id="@+id/text_passenger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du passager"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <!-- Détails du trajet -->
    <TextView
        android:id="@+id/text_trip_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Détails du trajet"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingBottom="16dp" />

    <!-- Conteneur pour les boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- Bouton Accepter -->
        <Button
            android:id="@+id/button_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_check_circle_24"
            android:background="@drawable/border"
            android:text="Accepter"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/white" />

        <!-- Bouton Refuser -->
        <Button
            android:id="@+id/button_reject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_close_24"
            android:background="@drawable/border_reject"
            android:text="Refuser"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
