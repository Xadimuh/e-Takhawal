<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du trajet"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_trip_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_trip_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_trip_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Heure"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_trip_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de places"
        android:layout_marginBottom="8dp"
        android:inputType="number" />

    <Button
        android:id="@+id/edit_trip_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white" />

</LinearLayout>
